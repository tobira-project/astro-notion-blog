# Notion API設定
NOTION_API_SECRET=your_notion_api_secret
DATABASE_ID=your_notion_database_id

# Node設定
NODE_VERSION=20.18.1

# Firebase設定（tobiratory-f6ae1プロジェクト）
PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
PUBLIC_FIREBASE_AUTH_DOMAIN=tobiratory-f6ae1.firebaseapp.com
PUBLIC_FIREBASE_PROJECT_ID=tobiratory-f6ae1
PUBLIC_FIREBASE_STORAGE_BUCKET=tobiratory-f6ae1.appspot.com
PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
PUBLIC_FIREBASE_APP_ID=your_app_id
PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# API設定
PUBLIC_API_URL=

# Stripe設定（TOBIRACAST有料機能）
# テストモード: pk_test_xxx / sk_test_xxx
# 本番モード: pk_live_xxx / sk_live_xxx
#
# ⚠️ 重要: Stripeダッシュボードでwebhookエンドポイントを設定してください
# 現在の本番URL: https://astro-notion-blog-7kz.pages.dev/api/stripe-webhook
# ドメイン変更時は、StripeダッシュボードのWebhook URLも更新が必要です！
PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Stripe商品ID（テストモード）
STRIPE_PRODUCT_ID_BASIC=your_basic_product_id        # ¥980/月
STRIPE_PRODUCT_ID_PREMIUM=your_premium_product_id    # ¥1,980/月
STRIPE_PRODUCT_ID_ULTIMATE=your_ultimate_product_id  # ¥9,800/月

# その他のオプション設定
CUSTOM_DOMAIN=
BASE_PATH=/
PUBLIC_GA_TRACKING_ID=
ENABLE_LIGHTBOX=false
REQUEST_TIMEOUT_MS=10000