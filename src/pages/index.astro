import { getNavLink } from '../lib/blog-helpers.ts'
import Layout from '../layouts/Layout.astro'
import NoContents from '../components/NoContents.astro'
import PostDate from '../components/PostDate.astro'
import PostFeaturedImage from '../components/PostFeaturedImage.astro'
import styles from '../styles/blog.module.css'

const [posts] = await Promise.all([
  getPosts(6), // ÊúÄÊñ∞6Ë®ò‰∫ã„ÅÆ„ÅøÂèñÂæó
])
---

<Layout>
  <div slot="main" class={styles.main}>
    <section class="articles-section">
      <div class="section-header">
        <h2 class="section-title">ÊúÄÊñ∞Ë®ò‰∫ã</h2>
        <p class="section-subtitle">Tobiratory„Åã„ÇâÊúÄÊñ∞„ÅÆ„Ç§„É≥„Çµ„Ç§„Éà„Çí„ÅäÂ±ä„Åë„Åó„Åæ„Åô</p>
      </div>
      {
        posts.length === 0 ? (
          <NoContents contents={posts} />
        ) : (
          <>
            <div class="latest-articles">
              {posts.map((post, index) => (
                <a href={getNavLink(`/posts/${post.Slug}`)} class="article-card-link">
                  <article class="article-card" key={post.Slug} style={`animation-delay: ${index * 0.1}s`}>
